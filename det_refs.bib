@article{buttoEnvironmentalDevelopmentalFactors2021,
  title = {Environmental and Developmental Factors Driving Xylem Anatomy and Micro-Density in Black Spruce},
  author = {Butt{\`o}, Valentina and Rozenberg, Philippe and Deslauriers, Annie and Rossi, Sergio and Morin, Hubert},
