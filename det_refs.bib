@article{buttoRegionwideTemporalGradients2021,
  title = {Regionwide Temporal Gradients of Carbon Allocation Allow for Shoot Growth and Latewood Formation in Boreal Black Spruce},
  author = {Butt{\`o}, Valentina and Khare, Siddhartha and Drolet, Guillaume and Sylvain, Jean-Daniel and Gennaretti, Fabio and Deslauriers, Annie and Morin, Hubert and Rossi, Sergio},
  year = {2021},
  journal = {Global Ecology and Biogeography},
  volume = {30},
