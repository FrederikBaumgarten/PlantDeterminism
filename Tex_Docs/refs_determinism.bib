@article{franconTimingWoodFormation2024,
  title = {The Timing of Wood Formation in Peatland Trees as Obtained with Different Approaches},
  author = {Francon, L. and Edvardsson, J. and Corona, C. and Stoffel, M.},
  year = {2024},
  month = jun,
  journal = {Dendrochronologia},
  volume = {85},
