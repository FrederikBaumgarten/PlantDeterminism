@article{estiarteAlterationPhenologyLeaf2015a,
  title = {Alteration of the Phenology of Leaf Senescence and Fall in Winter Deciduous Species by Climate Change: Effects on Nutrient Proficiency},
  shorttitle = {Alteration of the Phenology of Leaf Senescence and Fall in Winter Deciduous Species by Climate Change},
